{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "warn",
      "single"
    ],
    "array-bracket-spacing": [
      "warn",
      "always"
    ],
    "semi": "warn",
    "no-unused-vars": [
      "error",
      {
        "args": "after-used"
      }
    ]
  }
}